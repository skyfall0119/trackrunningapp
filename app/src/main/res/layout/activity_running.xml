<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Running">

    <Button
        android:id="@+id/btnMyCustomRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My custom Run"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnQuickRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Quick Run"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnMyCustomRun"
        app:layout_constraintStart_toStartOf="@+id/btnMyCustomRun"
        app:layout_constraintTop_toBottomOf="@+id/btnMyCustomRun" />
</androidx.constraintlayout.widget.ConstraintLayout>